<!doctype html>
<html>
  <head>
    <title>Artists</title>
  </head>
  <body>
      <h3> Artists </h3>
      <div>Click on an artist to see/add an album</div>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>Bio</th>
          </tr>
        </thead>
        <tbody>
            <% artists.forEach(function(artist) { %>
              <tr>
                <td><a href="/albums/<%= artist.name %>"><%= artist.name %></a></td>
                <td><%= artist.genre %></td>
                <td><%= artist.bio %></td>
                <td><a href="https://en.wikipedia.org/wiki/<%= artist.name %>">wiki</a></td>
                <td>
                  <form action="/artists/<%= artist._id %>" method="post">
                    <input type="submit" value="x">
                  </form>
                </td>
              </tr>
            <% }); %>
        </tbody>
      </table>
  </body>
</html>
